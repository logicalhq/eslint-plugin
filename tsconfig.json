{
  "include": ["lib"],
  "exclude": ["script.ts", "**/node_modules", "**/.*/", "dist"],
  "compilerOptions": {
    "rootDir": ".",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "pretty": false,
    "types": ["node", "jest"],
    "paths": {
      "lib/*": ["./lib/*"],
      "test/*": ["./test/*"]
    }
  }
}
